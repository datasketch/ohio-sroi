---
import CardAmount from "../components/CardAmount";
import TabSection from "../components/TabSection";
import BaseLayout from "../layout/BaseLayout.astro";
import data from "../data/index.json";
console.log(data);
---

<BaseLayout title="Home Page" description="Esta es la pÃ¡gina inicial">
  <div>
    <img
      class="w-full h-full object-cover object-center"
      src="/images/banner.jpg"
      alt="banner"
    />
  </div>
  <!--  -->
  <div class="relative pb-24">
    <div class="-mt-32 u-container bg-white">
      <div class="py-12">
        <div class="mx-auto max-w-xl">
          <div class="flex items-center justify-between">
            <div class="flex-shrink-0">
              <img src={data.logo} alt={data.title} />
            </div>
            <div class="text-center">
              <h2 class="text-xl">{data.subtitle}</h2>
              <h1 class="font-monserrat font-semibold text-3xl">
                {data.title}
              </h1>
            </div>
          </div>
        </div>
        <div class="mx-auto max-w-[720px] text-center mt-10">
          <p>
            {data.description}
          </p>
        </div>
        <div class="bg-gray h-[1px] max-w-[936px] mx-auto mt-12"></div>
        <div class="mt-20">
          <div class="flex gap-x-28 items-center">
            <div class="w-1/2">
              <CardAmount
                title={data.statistics_section.title}
                amount={data.statistics_section.amount}
                cardAmount={data.statistics_section.cardAmount}
                color={data.theme}
                client:load
              />
            </div>
            <div class="w-1/2">
              <img
                src={data.statistics_section.srcGraph}
                alt={data.statistics_section.title}
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--  -->
  <div>
    <TabSection color={data.theme} tabs={data.tabs} client:load />
  </div>
</BaseLayout>
